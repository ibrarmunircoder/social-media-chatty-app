{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "DOM.Iterable", "ES2016"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "pretty": true,
    "plugins": [{ "transform": "typescript-transform-paths" }, { "transform": "typescript-transform-paths", "afterDeclaration": true }],
    "paths": {
      "@user/*": ["src/features/user/*"],
      "@auth/*": ["src/features/auth/*"],
      "@comments/*": ["src/features/comments/*"],
      "@followers/*": ["src/features/followers/*"],
      "@post/*": ["src/features/post/*"],
      "@reactions/*": ["src/features/reactions/*"],
      "@globals/*": ["src/shared/globals/*"],
      "@services/*": ["src/shared/services/*"],
      "@sockets/*": ["src/shared/sockets/*"],
      "@workers/*": ["src/shared/workers/*"],
      "@root/*": ["src/*"] // keep it at last
    }
  }
}
